@page
@model CustomerManager.Web.Pages._IndexPartialModel
@{
} 

    <h1>Manage Customers</h1>

      
    <form action="javascript:void(0);" method="POST" onsubmit="addItem()">
        <input type="text" id="add-name" placeholder="New customer">
        <input type="submit" value="Add">
    </form>

    <div id="editForm">
        <h3>Edit</h3>
        <form action="javascript:void(0);" onsubmit="updateItem()">
            <input type="hidden" id="edit-id">
            <input type="checkbox" id="edit-isComplete">
            <input type="text" id="edit-details">
            <input type="submit" value="Save">
            <a onclick="closeInput()" aria-label="Close">&#10006;</a>
        </form>
    </div>

    <p id="counter"></p>

    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Telephone</th>
            <th>Reference</th>
            <th></th>
            <th></th>
        </tr>
        <tbody id="customerTbl"></tbody>
    </table>

    <script src="js/customermanager.ui.js" asp-append-version="true"></script>
    <script type="text/javascript">
        getItems();
    </script>